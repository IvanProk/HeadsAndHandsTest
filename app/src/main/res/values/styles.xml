<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="SignInToolBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="actionMenuTextColor">@color/blue</item>
        <item name="android:actionMenuTextAppearance">@style/SignInMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/SignInMenuTextAppearance</item>
    </style>

    <style name="SignInMenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
